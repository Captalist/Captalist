{
  "name": "captalist",
  "productName": "Captalist",
  "version": "0.6.0",
  "description": "My Electron application description",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "npx electron-forge package",
    "make": "electron-forge make",
    "publish": "npx electron-forge publish",
    "postinstall": "npx electron-builder install-app-deps",
    "lint": "echo \"No linting configured\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Captalist/Captalist.git"
  },
  "keywords": [],
  "author": "Chidozie Nnaji",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "captalist"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "codingwithcn",
              "name": "Captalist",
              "type": "git",
              "url": "https://github.com/Captalist/Captalist.git"
            }
          },
          "draft": true
        }
      ]
    }
  },
  "dependencies": {
    "custom-electron-titlebar": "^3.2.7",
    "electron-builder-squirrel-windows": "^22.14.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.3.9",
    "node-fetch": "^2.6.1",
    "sqlite3": "^5.0.2",
    "update-electron-app": "^2.0.1",
    "yarn": "^1.22.11"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "@electron-forge/publisher-github": "^6.0.0-beta.61",
    "electron": "13.1.4",
    "electron-builder": "22.10.5"
  },
  "build": {
    "extraResources": [
      "databaseFolder"
    ],
    "linux": {
      "category": "Development",
      "publish": false,
      "target": "AppImage"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "squirrel"
    },
    "squirrelWindows": {
      "iconUrl": "https://github.com/Captalist/Captalist/blob/main/src/Assests/Facebook%20Post%20940x788%20px@5x.png?raw=true"
    }
  },
  "updater": {
    "url": "https://raw.githubusercontent.com/Captalist/Captalist/main/updates.json"
  },
  "nsis": {
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "oneClick": true,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "runAfterFinish": true,
    "deleteAppDataOnUninstall": true,
    "differentialPackage": true
  }
}
